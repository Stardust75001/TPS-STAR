{% comment %}
  Enhanced SEO Meta Tags (corrigés)
{% endcomment %}

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ page_title }}">
<meta
  property="og:description"
  content="{{ page_description | default: shop.description | truncate: 160 }}"
>
{% if page_image %}
  <meta property="og:image" content="{{ page_image | image_url: width: 1200, height: 630 }}">
{% elsif shop.brand.logo %}
  <meta property="og:image" content="{{ shop.brand.logo | image_url: width: 1200, height: 630 }}">
{% endif %}
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:locale" content="{{ request.locale.iso_code }}">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title }}">
<meta
  name="twitter:description"
  content="{{ page_description | default: shop.description | truncate: 160 }}"
>
{% if page_image %}
  <meta name="twitter:image" content="{{ page_image | image_url: width: 1200, height: 630 }}">
{% elsif shop.brand.logo %}
  <meta name="twitter:image" content="{{ shop.brand.logo | image_url: width: 1200, height: 630 }}">
{% endif %}
{% if settings.social_twitter_link != blank %}
  <meta
    name="twitter:site"
    content="{{ settings.social_twitter_link | split: '/' | last | prepend: '@' }}"
  >
{% endif %}

<!-- Robots & Générateur -->
<meta name="robots" content="index, follow">
<meta name="author" content="{{ shop.name }}">
<meta name="generator" content="Shopify">
