{% comment %}
  Section produit simple pour test
{% endcomment %}

<div class="product-page-simple">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        {%- assign first_image = true -%}
        {%- for media in product.media -%}
          {%- if first_image -%}
            {%- assign _loading = 'eager' -%}
            {%- assign _priority = 'high' -%}
            {%- assign first_image = false -%}
          {%- else -%}
            {%- assign _loading = 'lazy' -%}
            {%- assign _priority = 'auto' -%}
          {%- endif -%}

          <img
            src="{{ media | image_url: width: 1600 }}"
            alt="{{ media.alt | escape }}"
            width="{{ media.width }}"
            height="{{ media.height }}"
            loading="{{ _loading }}"
            fetchpriority="{{ _priority }}"
            decoding="async"
          >
        {%- endfor -%}

        {% if product.images.size > 0 %}
          <img
            src="{{ product.featured_image | img_url: 'master' }}"
            alt="{{ product.title }}"
            class="img-fluid"
          >
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="col-md-6">
        <h1>{{ product.title }}</h1>
        <p class="price">{{ product.price | money }}</p>
        <div class="description">{{ product.description }}</div>

        {% form 'product', product %}
          <input
            type="hidden"
            name="id"
            value="{{ product.selected_or_first_available_variant.id }}"
          >
          <button type="submit" class="btn btn-primary">Ajouter au panier</button>
        {% endform %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Produit simple",
  "settings": [
    {
      "type": "header",
      "content": "Configuration"
    }
  ],
  "presets": [
    {
      "name": "Produit simple"
    }
  ]
}
{% endschema %}
